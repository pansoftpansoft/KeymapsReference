<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#aaa">

            <TextView
                android:id="@+id/textKeymapCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="textKeymapCode"
                android:textSize="25sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textActionEn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textActionEn"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textActionTranslation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="textActionTranslation"
            android:textSize="15sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>